<Window x:Class="prof1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prof1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5.5*"/>
            <ColumnDefinition Width="5.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="1" Grid.ColumnSpan="4" Source="/Images/TrendLine.png"/>
        <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Source="/Images/Profit2.png"/>
        <Grid x:Name="gr_profit" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0">
                <Label Grid.Row="0" Grid.Column="0" Content="Első dobás:" FontSize="16" Foreground="White" Margin="5"/>
                <Label Grid.Row="0" Grid.Column="0" Content="Második dobás:" FontSize="16" Foreground="White" Margin="5"/>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,10,0,0">
                <TextBox x:Name="tb_num1" Grid.Row="0" Grid.Column="0" FontSize="16" Margin="0,2" />
                <TextBox x:Name="tb_num2" Grid.Row="0" Grid.Column="0" FontSize="16" Margin="0,15,0,0" />
            </StackPanel>
            <Button Grid.Row="0" Grid.Column="3" Content="Enter" FontSize="32" Click="Button_Click"/>
            <Grid Grid.Row="1" Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="tb_task" Grid.Row="0" Grid.Column="0"/>
                <Button Grid.Row="1" Grid.Column="0" Content="Új feladat" Click="New_Task"/>
            </Grid>
            <Grid x:Name="g_trendline" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>


                <Label Grid.Row="0" Content="TrendLine" Foreground="White" FontSize="16" FontStyle="Italic" Margin="0,0,0,0"/>
                <Label Grid.Row="1" Grid.Column="0" x:Name="l_honnan"  Content="Honnan:" FontSize="16" Foreground="White" Margin="0,0,0,0"/>
                <Label Grid.Row="2" Grid.Column="0" Content="Hova:" FontSize="16" Foreground="White" Margin="0,0,0,0"/>
                <CheckBox x:Name="cb_forgatok" Grid.Row="3" Grid.Column="0" Content="Forgatok" Foreground="White" FontSize="15"/>
                <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="Végrehajt" FontSize="16" Click="Button_Click_1"/>


                <TextBox x:Name="tb_honnan" Grid.Row="1" Grid.Column="1" FontSize="16"  Margin="25,3"/>
                <TextBox x:Name="tb_hova" Grid.Row="2" Grid.Column="1" FontSize="16" Margin="25,3"/>
                <Button Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="2" Content="Új kör" Click="Button_Click_ujkor"/>
            </Grid>
            
        </Grid>


        <Grid x:Name="gr_trendlinetable" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

        </Grid>
    </Grid>
</Window>
