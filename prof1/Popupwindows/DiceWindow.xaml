<Window x:Class="prof1.DiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:prof1"
        mc:Ignorable="d"
        Title="DiceWindow"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown" 
        Height="150" 
        Width="100"
        >
    <Grid x:Name="gr_dice">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Dobott számok:" Grid.Row="0"  VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Montserrat" FontWeight="DemiBold"/>
        <Button x:Name="bt_ok" Content="Ok" Grid.Row="2" Click="Button_Click" FontFamily="Montserrat" FontWeight="Bold" />

    </Grid>
</Window>
